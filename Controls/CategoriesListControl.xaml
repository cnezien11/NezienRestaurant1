<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NezienRestaurant1.Controls.CategoriesListControl"
             xmlns:vm="clr-namespace:NezienRestaurant1.ViewModels"
             xmlns:data="clr-namespace:NezienRestaurant1.Data"
             xmlns:models="clr-namespace:NezienRestaurant1.Models"
             xmlns:controls="clr-namespace:NezienRestaurant1.Controls" 
             x:Name="This">
    
    
    <CollectionView Grid.Row="1"  BindingContext="{x:Reference This}"  ItemsSource="{Binding Categories}">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:MenuCategoryModel">
                <Border 
                Padding="20,10" 
                    BackgroundColor="LightGreen" 
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="0">
                    <HorizontalStackLayout Spacing="5">
                        <Image 
                        Source="{Binding Icon}" 
                           HeightRequest="20"
                           WidthRequest="20"/>
                        <Label 
                        Text="{Binding Name}" 
                           VerticalOptions="Center"
                           TextColor="Maroon">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" 
                                         Binding="{Binding IsSelected}" 
                                         Value="True">
                                    <Setter Property="TextColor" 
                                        Value="White" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </HorizontalStackLayout>
                    <Border.Triggers>
                        <DataTrigger 
                                TargetType="Border" 
                                 Binding="{Binding IsSelected}" 
                                 Value="True">
                            <Setter 
                            Property="BackgroundColor"
                            Value="Maroon" />
                        </DataTrigger>
                    </Border.Triggers>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type controls:CategoriesListControl}}, Path=SelectCategoryCommand}"
                                          CommandParameter="{Binding .}"/>
                    </Border.GestureRecognizers>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>
